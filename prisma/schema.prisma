// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Notification {
  id String @id
  content String
  recipientID String
  category String
  readAt DateTime?
  createdAt DateTime @default(now())

  @@index([recipientID])
}